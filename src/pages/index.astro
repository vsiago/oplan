---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Oplan - Planos de Saúde">
	<header class="flex justify-between items-center w-screen h-[95px] p-7 bg-white shadow-lg">
		<img src="./public/logo.svg" alt="">
		<img class="cursor-pointer h-[30px]" src="./public/icon-menu.svg" alt="">
	</header>
	<section class="bg-gray-500 min-h-[calc(100vh-100px-70px)]">
		<h1 class="text-center text-4xl font-bold w-[90%]">Plano de Saúde: <br>Encontre o Plano Ideal para Sua Empresa</h1>
	</section>
</Layout>

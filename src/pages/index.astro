---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
---

<Layout title="Oplan - Planos de Saúde">
  <header class="bg-white shadow-lg">
  <div class="flex m-auto container justify-between items-center w-screen h-[95px] p-7 ">
    <a href="./"
    ><img
      src="https://res.cloudinary.com/dbjzaupe7/image/upload/v1675645218/logo_yvwace.svg"
      alt="Logo Oplan"
      width={128}
      height={36}
    /></a
  >
  <nav>
    <ul class="hidden lg:flex items-center gap-6 brand-text-menu-gray-color">
      <li>
        <a href="./">Inicio</a>
      </li>
      <li>
        <a href="./">Sobre</a>
      </li>
      <li>
        <a href="./">Blog</a>
      </li>
      <li>
        <a href="./">Contato</a>
      </li>
      <button class="hidden lg:flex items-center gap-1 border-2 border-blue-400 px-8 py-2 rounded-lg">
        <p>Docs</p>
        <svg class="w-4 h-4 stroke-2 stroke-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>        
      </button>
    </ul>
    <div>

      <img
      class="cursor-pointer lg:hidden"
      src="https://res.cloudinary.com/dbjzaupe7/image/upload/v1675645218/icon-menu_laqjft.svg"
      width={34}
      height={34}
      alt="Menu"
    />
    </div>
  </nav>
  </div>
  </header>
  <section
    class="text-center bg-gray-500 min-h-[calc(100vh-100px-10vh-50px)] lg:h-[calc(100vh-100px-10vh)] flex justify-center items-center text-white gradient-hero flex-col"
  >
    <h1 class="text-4xl font-bold w-[90%] lg:text-6xl lg:w-[80%]">
      <span class="text-gradient">Plano de Saúde:</span><br />Encontre o Plano
      Ideal para <br class="hiddren 2xl:block">Sua Empresa
    </h1>
    <p class="w-[75%] mt-5 brand-text-gray-color lg:text-2xl lg:w-[30%]">
      Compre Online com Rapidez e Segurança - Planos de Saúde para todos os
      Orçamentos"
    </p>
    <span class="mt-10">Cotação rápida e 100% Online.</span>
    <button class="bg-blue-500 px-12 py-4 rounded-lg mt-4">Simule agora</button>
  </section>
  
  <section class="brand-gray-800 brand-text-gray-color">
    <div class="flex container items-center justify-between h-[calc(10vh+5px)] px-3 m-auto lg:w-[70%] lg:px-16">

      <svg class="hover:stroke-cyan-500 transition duration-150 ease-out hover:ease-in cursor-pointer w-12" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
      </svg>

        <div class="list-none w-full flex items-center justify-center gap-14 ">

          <li class="flex px-10 py-3 border border-gray-600 rounded-lg cursor-pointer hover:bg-cyan-500 hover:text-white transition duration-150 ease-out hover:ease-in">
            <a class="flex gap-2" href="./">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
              </svg>            
              <p class="font-medium">Segunda via Boleto</p>
            </a>
          </li>

          <li class="hidden lg:flex px-10 py-3 border border-gray-600 rounded-lg cursor-pointer hover:bg-cyan-500 hover:text-white transition duration-150 ease-out hover:ease-in ">
            <a class="flex gap-2" href="./">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9zm3.75 11.625a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
              </svg>
              <p class="font-medium">Marque sua consulta</p>
            </a>
          </li>

          <li class="hidden lg:flex px-10 py-3 border border-gray-600 rounded-lg cursor-pointer hover:bg-cyan-500 hover:text-white transition duration-150 ease-out hover:ease-in ">
            <a class="flex gap-2" href="./">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
              </svg>
              <p class="font-medium">Ouvidoria</p>
            </a>
          </li>

        </div>

        <svg class="hover:stroke-cyan-500 transition duration-150 ease-out hover:ease-in cursor-pointer w-12" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
        </svg>
        
    </div>
  </section>
</Layout>

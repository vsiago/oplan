        width={205}
        height={36}
      /></a
    >
    <nav>
      <div class="relative z-50" id="menuIcon">
        <input id="menu-hamburguer" type="checkbox" />
        <label class="lg:hidden" for="menu-hamburguer">
          <div class="menu">
            <span class="hamburguer"></span>
          </div>
        </label>
        <ul
          id="menuLista"
          class="animar-menu-principal hidden transition-[.25s-ease-in-out] opacity-0 fixed top-[50%] left-[50%] translate-x-[-50%] translate-y-[-50%] flex-col items-center justify-center lg:flex lg:static lg:flex-row gap-6 brand-text-menu-gray-color lg:top-0 lg:left-0 lg:translate-x-0 lg:translate-y-0 lg:opacity-100"
        >
          <li
            class="p-3 text-xl active:bg-blue-500 active:text-white lg:active:bg-white lg:active:text-gray-800 active:rounded-xl w-full text-center lg:p-0 lg:text-lg"
          >
